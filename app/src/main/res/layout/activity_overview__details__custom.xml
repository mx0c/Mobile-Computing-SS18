<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Workplace_Details_Custom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="From:"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="To:"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:gravity="bottom|left"
        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <Button
            android:id="@+id/date1_button"
            android:layout_width="49dp"
            android:layout_height="55dp"
            android:layout_marginBottom="-6dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableTint="@color/common_google_signin_btn_text_dark_default"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:shadowColor="@color/common_google_signin_btn_text_dark_default"
            android:stateListAnimator="@null"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default"
            android:textColorLink="@color/common_google_signin_btn_text_dark_default" />


        <EditText
            android:id="@+id/dateStart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="dd-mm-yyyy"
            android:shadowColor="@color/common_google_signin_btn_text_dark_default"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

        <Button
            android:id="@+id/date2_button"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:layout_marginBottom="-6dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableTint="@color/common_google_signin_btn_text_dark_default"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:stateListAnimator="@null"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="33dp" />

        <EditText
            android:id="@+id/dateEnd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="dd-mm-yyyy"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_default"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:text="SEARCH"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/layout_border_black_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/place_autocomplete_search_hint"
            android:foregroundTint="@color/place_autocomplete_search_hint"
            android:tint="@color/place_autocomplete_prediction_primary_text_highlight"
            app:srcCompat="@drawable/ic_clock" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00 hours" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tint="@color/place_autocomplete_prediction_primary_text_highlight"
            app:srcCompat="@drawable/ic_stopwatch" />

        <TextView
            android:id="@+id/totalPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00 hours" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tint="@color/place_autocomplete_prediction_primary_text_highlight"
            app:srcCompat="@drawable/ic_attach_money" />

        <TextView
            android:id="@+id/totalSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0,0 â‚¬" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/customList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top" />
    </LinearLayout>
</LinearLayout>
