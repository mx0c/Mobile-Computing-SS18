<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hochschule Reutlingen"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/workplace_image"
                android:layout_width="31dp"
                android:layout_height="34dp"
                android:layout_marginLeft="60dp"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/baseline_account_balance_black_18dp" />

            <TextView
                android:id="@+id/current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Position"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_row="2" />

            <TextView
                android:id="@+id/current_position_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="3" />

            <TextView
                android:id="@+id/work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work time"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_row="4" />

            <TextView
                android:id="@+id/current_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="5" />

            <TextView
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_row="6" />

            <TextView
                android:id="@+id/current_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="7" />

            <TextView
                android:id="@+id/money_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money Earned"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_row="8" />

            <TextView
                android:id="@+id/current_money_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="9" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/map_marker" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:layout_column="0"
                app:layout_row="4"
                app:srcCompat="@drawable/baseline_av_timer_black_18dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:layout_column="0"
                app:layout_row="6"
                app:srcCompat="@drawable/baseline_pause_circle_outline_black_18dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:layout_column="0"
                app:layout_row="8"
                app:srcCompat="@drawable/baseline_euro_symbol_black_18dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:layout_column="0"
                app:layout_row="10"
                app:srcCompat="@drawable/baseline_account_circle_black_18dp" />

            <TextView
                android:id="@+id/breaks_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breaks"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_row="10" />

            <TextView
                android:id="@+id/current_breaks_counted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_column="1"
                app:layout_row="11" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                app:layout_column="1"
                app:layout_row="1" />
        </android.support.v7.widget.GridLayout>

    </RelativeLayout>
